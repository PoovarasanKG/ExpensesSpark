<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="android:windowFullscreen">true</item>

        <item name="android:spinnerItemStyle">@style/TextViewSpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/TextViewSpinnerDropDownItem</item>
        <!-- Override the dropdown item in support library -->
        <item name="spinnerDropDownItemStyle">@style/TextViewSpinnerDropDownItem</item>
        <item name="android:editTextStyle">@style/App_EditTextStyle</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="subtitleTextColor">@android:color/white</item>
        <item name="android:spinnerStyle">@style/Widget.AppCompat.Spinner.Underlined</item>
        <item name="textInputStyle">@style/TextInputLayoutTheme</item>
    </style>



    <style name="NoActionBarAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/primaryLightColor</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--Bottom Sheets-->
    <style name="ThemeOverlay.MyTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.BottomSheet.Modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.MyTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>

    <style name="Widget.MyTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?attr/shapeAppearanceLargeComponent</item>
    </style>

    <!--Navigation Drawer-->
    <style name="Widget.MyTheme.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="TextViewSpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:backgroundTint">@color/lightTextColor</item>
        <item name="background">@style/Widget.AppCompat.Spinner.Underlined</item>
    </style>

    <style name="TextViewSpinnerDropDownItem" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/darkTextColor</item>
    </style>

    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/darkTextColor</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:backgroundTint">@color/lightTextColor</item>
    </style>

    <style name="TextInputLayoutTheme" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">@color/darkTextColor</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:backgroundTint">@color/lightTextColor</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColorHint">@color/lightTextColor</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/darkTextColor</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:backgroundTint">@color/lightTextColor</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColorHint">@color/lightTextColor</item>
        <item name="android:spinnerStyle">@style/Widget.AppCompat.Spinner.Underlined</item>
    </style>

</resources>
